<div class="col-md-4 col-md-offset-4">
    <h3 class="text-center">Add Comment</h3>
    <%= simple_form_for(Comment.new, url: meetup_comments_path(@meetup)) do |f| %>
        <%= f.input :message %>
        <%= f.submit "Submit", class: "btn btn-primary", :disable_with => "Submitting..." %>
    <% end %>
</div>
